<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:orientation="vertical">        <android.support.v7.widget.CardView            android:id="@+id/commonCardView"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:elevation="4dp"            android:clickable="true"            android:foreground="?android:attr/selectableItemBackground">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_margin="@dimen/dp_10"                android:orientation="horizontal">                <RelativeLayout                    android:layout_width="75dp"                    android:layout_height="75dp">                    <ImageView                        android:id="@+id/imageCardView"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:src="@drawable/ic_mera_news_placeholder"                        android:scaleType="centerCrop"                        android:layout_centerInParent="true"/>                    <ImageView                        android:id="@+id/ib_videos"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_alignTop="@id/imageCardView"                        android:layout_alignBottom="@id/imageCardView"                        android:layout_alignLeft="@id/imageCardView"                        android:layout_alignRight="@id/imageCardView"                        android:src="@drawable/ic_play_circle"                        android:scaleType="centerInside"                        android:visibility="gone"/>                </RelativeLayout>                <RelativeLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:orientation="vertical"                    android:layout_marginLeft="@dimen/dp_10">                    <TextView                        android:id="@+id/titleCardView"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:fontFamily="sans-serif-condensed"                        android:lines="2"                        android:text="Amit Bhatnagar's Diamond Power’s director had quit right before seizure of the firm’s property"                        android:textColor="@color/black"                        android:textSize="15dp" />                    <TextView                        android:id="@+id/news_type"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:text="Top News"                        android:fontFamily="sans-serif-condensed"                        android:textSize="@dimen/sp_12"                        android:textColor="#789"                        android:layout_marginTop="20dp"                        android:layout_below="@+id/titleCardView"/>                    <ImageView                        android:id="@+id/iv_favorite"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_below="@+id/titleCardView"                        android:layout_toLeftOf="@+id/iv_share"                        android:layout_toStartOf="@+id/iv_share"                        android:padding="5dp"                        android:scaleType="centerInside"                        android:src="@drawable/ic_bookmark_off" />                    <ImageView                        android:id="@+id/iv_share"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_below="@+id/titleCardView"                        android:layout_alignParentEnd="true"                        android:layout_alignParentRight="true"                        android:padding="5dp"                        android:scaleType="centerInside"                        android:src="@drawable/ic_share" />                </RelativeLayout>            </LinearLayout>        </android.support.v7.widget.CardView>    </LinearLayout>